<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.view.SelectableRoundedImageView
            android:id="@+id/playerImgView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            app:sriv_border_color="@android:color/transparent"
            app:sriv_border_width="2dip"
            app:sriv_left_bottom_corner_radius="25dip"
            app:sriv_left_top_corner_radius="25dip"
            app:sriv_oval="true"
            app:sriv_right_bottom_corner_radius="25dip"
            app:sriv_right_top_corner_radius="25dip" />

        <com.view.MTextView
            android:id="@+id/playerNameTxtView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt_size_18" />


        <com.view.MTextView
            android:id="@+id/captainTxtView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="C"
            android:textSize="@dimen/txt_size_20"
            app:customTypeFace="@string/semiBoldFont" />

        <com.view.MTextView
            android:id="@+id/viceCaptainTxtView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="VC"
            android:textSize="@dimen/txt_size_20"
            app:customTypeFace="@string/semiBoldFont" />


    </LinearLayout>

</RelativeLayout>
