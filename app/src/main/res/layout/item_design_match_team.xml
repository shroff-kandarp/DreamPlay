<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <com.view.MTextView
                android:id="@+id/teamCountTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEAM"
                android:textColor="#272727"
                android:textSize="@dimen/txt_size_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:background="#9e9c9c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CAPTAIN"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_14" />

                    <com.view.MTextView
                        android:id="@+id/captainTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XXXX"
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="0"
                    android:background="#9e9c9c" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VICE CAPTAIN"
                        android:textColor="@color/appThemeColor_1"
                        android:textSize="@dimen/txt_size_14" />

                    <com.view.MTextView
                        android:id="@+id/viceCaptainTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="XXXX"
                        android:textColor="#696969"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#9e9c9c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="WK"
                        android:textColor="#696969"
                        android:textSize="@dimen/txt_size_16" />

                    <com.view.MTextView
                        android:id="@+id/wkCountTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="BAT"
                        android:textColor="#696969"
                        android:textSize="@dimen/txt_size_16" />

                    <com.view.MTextView
                        android:id="@+id/batCountTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="ALL"
                        android:textColor="#696969"
                        android:textSize="@dimen/txt_size_16" />

                    <com.view.MTextView
                        android:id="@+id/allCountTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.view.MTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="BOWL"
                        android:textColor="#696969"
                        android:textSize="@dimen/txt_size_16" />

                    <com.view.MTextView
                        android:id="@+id/bowlCountTxtView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#272727"
                        android:textSize="@dimen/txt_size_16" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_weight="0"
                android:background="#9e9c9c" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.view.MTextView
                    android:id="@+id/previewTeamTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@mipmap/ic_team_preview"
                    android:gravity="center"
                    android:text="Preview"
                    android:textColor="#272727"
                    android:textSize="@dimen/txt_size_18" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_weight="0"
                    android:background="#9e9c9c" />


                <com.view.MTextView
                    android:id="@+id/editTeamTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableStart="@mipmap/ic_edit_team"
                    android:gravity="center"
                    android:text="Edit"
                    android:textColor="#272727"
                    android:textSize="@dimen/txt_size_18" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>